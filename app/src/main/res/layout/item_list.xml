<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/backgroundBiasa">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/txt_judullist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Ini nama tempatnya"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_alamatlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_judullist"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="Ini alamat Jalan xxx No. 999, Depok" />

        <TextView
            android:id="@+id/ket_jam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_alamatlist"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="3dp"
            android:text="Jam operasional : " />

        <TextView
            android:id="@+id/txt_jamlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_alamatlist"
            android:layout_toRightOf="@id/ket_jam"
            android:text="07:00 - 22.00"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_juduljarak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ket_jam"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:text="Jarak : " />

        <TextView
            android:id="@+id/txt_jaraklist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ket_jam"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/txt_juduljarak"
            android:text="xxxx meter"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_detaillist"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@id/txt_juduljarak"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimaryDark"
            android:text="Info Detail" />

        <Button
            android:id="@+id/btn_directionlist"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@id/txt_juduljarak"
            android:layout_toRightOf="@id/btn_detaillist"
            android:background="@color/colorPrimary"
            android:text="Rute" />


    </RelativeLayout>

</android.support.v7.widget.CardView>